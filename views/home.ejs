<%- include("templates/header", { title: title }) %>

    <div class="row justify-content-center">
        <div class="col-12 position-relative">
            <div id="myCarousel" class="carousel slide position-relative " data-bs-ride="carousel"
                data-bs-interval="3000">
                <div class="carousel-inner ">
                    <div class="carousel-item active">
                        <img src="img1.jpg" class="d-block w-100 h-auto" style="aspect-ratio: 16 / 7;"
                            alt="Apartamento 1">
                    </div>
                    <div class="carousel-item">
                        <img src="img2.jpg" class="d-block w-100 h-auto" style="aspect-ratio: 16 / 7;"
                            alt="Apartamento 2">
                    </div>
                    <div class="carousel-item">
                        <img src="img3.jpg" class="d-block w-100 h-auto" style="aspect-ratio: 16 / 7;"
                            alt="Apartamento 3">
                    </div>
                </div>

                <!-- ********** Formulario ********** -->
                <div class="position-absolute top-50 start-50 translate-middle w-100 px-3 form-overlay-responsive"
                    style="max-width: 800px; z-index: 10;">
                    <div class="bg-white p-4 rounded shadow-sm">
                        <h4 class="mb-4 text-center">Filtrar apartamentos</h4>
                        <form action="/apartments/search" method="GET" onsubmit="updateHiddenFields()">
                            <!-- *** Fila 1 *** -->
                            <div class="row g-3 mb-3">
                                <div class="col-md-4">
                                    <label for="provinceSelect" class="form-label">Selecciona una provincia:</label>
                                    <select id="provinceSelect" class="form-control form-select mb-3">
                                        <option value="">-- Selecciona una provincia --</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="municipalitySelect" class="form-label">Selecciona un municipio:</label>
                                    <select id="municipalitySelect" class="form-control form-select">
                                        <option value="">-- Selecciona un municipio --</option>
                                    </select>
                                </div>
                                <input type="hidden" name="location[province]" id="provinceNameInput">
                                <input type="hidden" name="location[city]" id="municipalityNameInput">
                                <div class="col-md-4">
                                    <label for="maxGuests" class="form-label">Capacidad máxima:</label>
                                    <input type="number" name="maxGuests" id="maxGuests" class="form-control" min="1">
                                </div>
                            </div>
                            <!-- *** Fila 2 *** -->
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label for="minPrice" class="form-label">Precio mínimo (€):</label>
                                    <input type="number" name="minPrice" id="minPrice" class="form-control" min="0"
                                        step="0.01">
                                </div>
                                <div class="col-md-6">
                                    <label for="maxPrice" class="form-label">Precio máximo (€):</label>
                                    <input type="number" name="maxPrice" id="maxPrice" class="form-control" min="0"
                                        step="0.01">
                                </div>
                            </div>
                            <!-- *** Fila 3 *** -->
                            <div class="mb-4">
                                <label class="form-label">Servicios:</label>
                                <div class="row g-2">
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input type="checkbox" name="services.airConditioning" value="on"
                                                class="form-check-input" id="airConditioning">
                                            <label class="form-check-label" for="airConditioning">
                                                <i class="bi bi-snow text-black me-1"></i>Aire Acondicionado
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input type="checkbox" name="services.heating" value="on"
                                                class="form-check-input" id="heating">
                                            <label class="form-check-label" for="heating">
                                                <i class="bi bi-fire text-black me-1"></i>Calefacción
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input type="checkbox" name="services.accessibility" value="on"
                                                class="form-check-input" id="accessibility">
                                            <label class="form-check-label" for="accessibility">
                                                <i class="bi bi-person-wheelchair text-black me-1"></i>Accesibilidad
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input type="checkbox" name="services.television" value="on"
                                                class="form-check-input" id="television">
                                            <label class="form-check-label" for="television">
                                                <i class="bi bi-tv text-black me-1"></i>Televisión
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input type="checkbox" name="services.kitchen" value="on"
                                                class="form-check-input" id="kitchen">
                                            <label class="form-check-label" for="kitchen">
                                                <i class="bi bi-cup-hot text-black me-1"></i>Cocina
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input type="checkbox" name="services.internet" value="on"
                                                class="form-check-input" id="internet">
                                            <label class="form-check-label" for="internet">
                                                <i class="bi bi-wifi text-black me-1"></i>Internet
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Buscar apartamentos</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("templates/seeApartments") %>
        <%- include("templates/footer") %>