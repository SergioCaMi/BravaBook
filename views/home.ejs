<%- include("templates/header", { title: title }) %>
    <!-- ********** Carrusel ********** -->
    <div class="position-relative my-5" style="width: 100%;">
        <div id="myCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="img1.jpg" class="d-block w-100 h-auto" style="aspect-ratio: 16 / 6;" alt="Apartamento 1">
                </div>
                <div class="carousel-item">
                    <img src="img2.jpg" class="d-block w-100 h-auto" style="aspect-ratio: 16 / 6;" alt="Apartamento 2">
                </div>
                <div class="carousel-item">
                    <img src="img3.jpg" class="d-block w-100 h-auto" style="aspect-ratio: 16 / 6;" alt="Apartamento 3">
                </div>
            </div>
        </div>

    <!-- ********** Formulario  ********** -->
        <div class="position-absolute top-50 start-50 translate-middle w-100 px-3"
            style="max-width: 800px; z-index: 10;">
            <div class="bg-white p-4 rounded shadow-sm">
                <h4 class="mb-4 text-center">Filtrar apartamentos</h4>

                <form action="/apartments/search" method="GET">

                    <!-- *** Fila 1 *** -->
                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <label for="locationProvince" class="form-label">Provincia:</label>
                            <input type="text" name="location.province" id="locationProvince" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label for="locationCity" class="form-label">Ciudad:</label>
                            <input type="text" name="location.city" id="locationCity" class="form-control">
                        </div>
                        <div class="col-md-4">
                            <label for="maxGuests" class="form-label">Capacidad máxima:</label>
                            <input type="number" name="maxGuests" id="maxGuests" class="form-control" min="1">
                        </div>
                    </div>

                    <!-- *** Fila 2 *** -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label for="minPrice" class="form-label">Precio mínimo (€):</label>
                            <input type="number" name="minPrice" id="minPrice" class="form-control" min="0" step="0.01">
                        </div>
                        <div class="col-md-6">
                            <label for="maxPrice" class="form-label">Precio máximo (€):</label>
                            <input type="number" name="maxPrice" id="maxPrice" class="form-control" min="0" step="0.01">
                        </div>
                    </div>

                    <!-- *** Fila 3 *** -->
                    <div class="mb-4">
                        <label class="form-label">Servicios:</label>
                        <div class="row g-2">
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input type="checkbox" name="services.airConditioning" value="on"
                                        class="form-check-input" id="airConditioning">
                                    <label class="form-check-label" for="airConditioning">
                                        <i class="bi bi-snow text-black me-1"></i>Aire Acondicionado
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-check">
                                    <input type="checkbox" name="services.heating" value="on" class="form-check-input"
                                        id="heating">
                                    <label class="form-check-label" for="heating">
                                        <i class="bi bi-fire text-black me-1"></i>Calefacción
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-check">
                                    <input type="checkbox" name="services.accessibility" value="on"
                                        class="form-check-input" id="accessibility">
                                    <label class="form-check-label" for="accessibility">
                                        <i class="bi bi-person-wheelchair text-black me-1"></i>Accesibilidad
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-check">
                                    <input type="checkbox" name="services.television" value="on"
                                        class="form-check-input" id="television">
                                    <label class="form-check-label" for="television">
                                        <i class="bi bi-tv text-black me-1"></i>Televisión
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-check">
                                    <input type="checkbox" name="services.kitchen" value="on" class="form-check-input"
                                        id="kitchen">
                                    <label class="form-check-label" for="kitchen">
                                        <i class="bi bi-cup-hot text-black me-1"></i>Cocina
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input type="checkbox" name="services.internet" value="on" class="form-check-input"
                                        id="internet">
                                    <label class="form-check-label" for="internet">
                                        <i class="bi bi-wifi text-black me-1"></i>Internet
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botón de envío -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Buscar apartamentos</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <hr>

    <!-- ********** 15 apartamentos ********** -->


    <% if (dataApartments && dataApartments.length> 0) { %>
        <div class="d-flex justify-content-center my-5">
            <div class="row g-4 justify-content-center w-100" style="max-width: 900px; margin: auto;">

                <% dataApartments.forEach(function(apartment) { %>
                    <div class="col-md-6 col-lg-5">
                        <div class="card h-100 shadow-sm">
                            <% const mainPhoto=apartment.photos.find(photo=> photo.isMain); %>
                                <% if (mainPhoto) { %>
                                    <img src="<%= mainPhoto.url %>" class="card-img-top" alt="Foto principal"
                                        style="height: 200px; object-fit: cover;">
                                    <% } else { %>
                                        <img src="/img/default.jpg" class="card-img-top" alt="Sin foto disponible"
                                            style="height: 200px; object-fit: cover;">
                                        <% } %>
                                            <div class="card-body d-flex flex-column">
                                                <h5 class="card-title">
                                                    <a href="/apartments/<%= apartment._id %>"
                                                        class="text-decoration-none text-dark">
                                                        <%= apartment.title %>
                                                    </a>
                                                </h5>

                                                <p class="card-text mb-2">
                                                    <strong>Precio:</strong>
                                                    <%= apartment.price %> €/noche<br>
                                                        <strong>M²:</strong>
                                                        <%= apartment.squareMeters %> m²
                                                </p>

                                                <p class="card-text text-muted small">
                                                    <strong>Servicios:</strong><br>
                                                    <% if (apartment.services.airConditioning) { %> Aire Acondicionado |
                                                        <% } %>
                                                            <% if (apartment.services.heating) { %> Calefacción | <% }
                                                                    %>
                                                                    <% if (apartment.services.accessibility) { %>
                                                                        Accesibilidad | <% } %>
                                                                            <% if (apartment.services.television) { %>
                                                                                Televisión | <% } %>
                                                                                    <% if (apartment.services.kitchen) {
                                                                                        %> Cocina | <% } %>
                                                                                            <% if
                                                                                                (apartment.services.internet)
                                                                                                { %> Internet <% } %>
                                                </p>
                                                <div class="mt-auto d-flex gap-2">
                                                    <a href="/apartments/<%= apartment._id %>"
                                                        class="btn btn-outline-primary btn-sm">Ver detalles</a>
                                                </div>
                                            </div>
                        </div>
                    </div>

                    <% }); %>

            </div>
        </div>
        <% } else { %>
            <p class="text-center my-5">No hay apartamentos disponibles.</p>
            <% } %>

                <%- include("templates/footer") %>